<section class="orders">
  <div class="customer_orders container mx-auto py-5">
    <% if(messages.success) { %>
    <div
      id="order_placed_alert"
      class="alert alert-info py-2 px-3 mb-4 d-flex align-items-center"
      role="alert"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        fill="currentColor"
        class="bi bi-check2-circle mx-2"
        viewBox="0 0 16 16"
      >
        <path
          d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"
        />
        <path
          d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"
        />
      </svg>
      <%= messages.success %>
    </div>
    <% } %>
    <h4 class="d-inline fw-bold m-0">Your Orders :</h4>

    <div class="order_table my-4">
      <table class="table table-hover table-bordered align-middle">
        <thead class="bg-dark text-white">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Order Id</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Address</th>
            <th scope="col">Time</th>
          </tr>
        </thead>
        <tbody>
          <% if(orders.length) { %> <% orders.forEach((order,index) => { %>
          <tr>
            <td scope="row">
              <%= orders.length - index %>
            </td>
            <td>
              <a href="/customer/order/<%= order._id %>"><%= order._id %></a>
            </td>
            <td><%= order.phone_number %></td>
            <td class="w-25"><%= order.address %></td>
            <td>
              <%= moment(order.createdAt).format("Do MMMM YYYY") %> ,
              <p class="mb-0">
                <%= moment(order.createdAt).format("dddd") %> ,
              </p>
              <p class="mb-0">
                <%= moment(order.createdAt).format("hh:mm A") %>
              </p>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td class="text-center" scope="row" colspan="5">
              No orders found!
            </td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</section>
