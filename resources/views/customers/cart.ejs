<section class="cart">
  <% if(session.cart) { %>
  <div class="cart_order container mx-auto w-50 py-5">
    <div class="d-flex align-items-center border-bottom border-2 pb-2">
      <i class="las la-shopping-cart"></i>
      <h3 class="fw-bold ms-2 mb-0">Order Summary</h3>
    </div>
    <div class="order_list border-bottom border-2 pb-5">
      <% for(let juice of Object.values(session.cart.items)) { %>
      <div>
        <div class="d-flex align-items-center">
          <img src="img/<%= juice.item.image %>" alt="" />
          <div class="ms-4">
            <h4 class="mb-1"><%= juice.item.name %></h4>
            <p class="mb-0 badge bg-secondary">
              <%= juice.item.quantity %>
            </p>
            <p>
              <button
                class="remove_item_btn text-decoration-none text-danger border-0 bg-transparent"
                data-cartjuice="<%= JSON.stringify(juice) %>"
              >
                Remove
              </button>
            </p>
          </div>
        </div>
        <div class="qty d-flex align-items-center justify-content-evenly">
          <a class="decrease_qty" data-cartjuice="<%= JSON.stringify(juice) %>"
            ><i class="las la-minus-circle"></i
          ></a>
          <h5 class="mb-0 cart_item_qty"><%= juice.qty %></h5>
          <a class="increase_qty" data-cartjuice="<%= JSON.stringify(juice) %>"
            ><i class="las la-plus-circle"></i
          ></a>
        </div>
        <h5 class="fw-bold mb-0">Rs. <%= juice.item.price %></h5>
      </div>
      <% } %>
    </div>
    <div class="py-4">
      <div class="d-flex align-items-center justify-content-end">
        <h6 class="fw-bold">Total Amount:</h6>
        <h5 class="cart_total_amt fw-bold ms-2">
          Rs. <%= session.cart.totalPrice %>
        </h5>
      </div>
      <% if(user) { %>
      <form
        action="/orders"
        method="POST"
        class="d-flex flex-column justify-content-end w-50 ms-auto my-4"
      >
        <div class="input-group">
          <span class="input-group-text">Address</span>
          <textarea
            name="address"
            class="form-control"
            rows="1"
            aria-label="With textarea"
          ></textarea>
        </div>
        <div class="input-group my-3">
          <span class="input-group-text" id="inputGroup-sizing-default"
            >Phone Number</span
          >
          <input
            name="phone_number"
            type="text"
            class="form-control"
            aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default"
          />
        </div>
        <button type="submit" class="btn btn_orange">Order Now</button>
      </form>
      <% } else { %>
      <a href="/login" class="btn btn_orange px-5">Login To Continue</a>
      <% } %>
    </div>
  </div>
  <% } else { %>
  <div class="empty_cart py-5">
    <div class="container text-center">
      <h3 class="fw-bold">Cart Is Empty ðŸ˜•</h3>
      <p class="text-muted">
        You probably haven't ordered a juice yet. To order a juice, go to the
        main page.
      </p>
      <img class="d-block mx-auto my-4" src="img/empty_cart.png" alt="" />
      <a href="/" class="btn btn_orange go_back_btn">Go Back</a>
    </div>
  </div>
  <% } %>
</section>
