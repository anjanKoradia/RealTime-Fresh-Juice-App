<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fresh Juice</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.gstatic.com" />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap"
      rel="stylesheet"
    />

    <!-- Line Awesome Icons -->
    <link
      rel="stylesheet"
      href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css"
    />

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6"
      crossorigin="anonymous"
    />

    <!-- External CSS -->
    <link rel="stylesheet" href="/css/app.css" />
  </head>
  <body>
    <!-- -------------------- Navbar Strat -------------------- -->
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <a class="navbar-brand" href="/">Juice</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarSupportedContent"
          aria-controls="navbarSupportedContent"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link" aria-current="page" href="/">Menu</a>
            </li>

            <% if(user) { %>
            <li class="nav-item">
              <a class="nav-link" href="/<%= user.role %>/orders">Orders</a>
            </li>
            <li class="nav-item">
              <!-- here form is used because we want to do post request on /logout route -->
              <form id="logout" action="/logout" method="post">
                <a
                  onclick="document.getElementById('logout').submit()"
                  class="nav-link"
                  href="#"
                  >Logout</a
                >
              </form>
            </li>
            <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/register">Register</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <% } %>
          </ul>

          <a
            href="/cart"
            class="btn btn_orange cart_btn d-inline-flex align-items-center ms-md-3"
          >
            <span class="cart_counter"
              ><%= session.cart ? session.cart.totalQty : "0" %></span
            >
            <i class="las la-shopping-cart ms-1"></i>
          </a>
        </div>
      </div>
    </nav>
    <!-- -------------------- Navbar End -------------------- -->

    <%- body%>

    <!-- -------------------- Footer Start -------------------- -->
    <footer class="footer text-center">
      <div class="copy_write">
        Â©2021 All rights reseved | This website is made with love by
        <a
          class="github_link"
          href="https://github.com/anjanKoradia"
          target="_blanck"
        >
          Anjan Koradia.</a
        >
      </div>
    </footer>
    <!-- -------------------- Footer End -------------------- -->

    <!-- Socket.io Js -->
    <script src="/socket.io/socket.io.js"></script>

    <!-- External Js -->
    <script src="/js/app.js"></script>

    <!-- Bootstrap Js -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
