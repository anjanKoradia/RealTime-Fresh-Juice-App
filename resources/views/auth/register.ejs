<section class="register d-flex align-items-center">
  <div class="container">
    <form
      action="/register"
      method="POST"
      class="row row-cols-1 g-3 mx-auto p-4 mt-4"
    >
      <h3 class="fw-bold">Register Yourself</h3>

      <div class="col">
        <label for="inputFirstName" class="form-label">Name</label>
        <input
          name="name"
          value="<%= messages.name %>"
          type="text"
          class="form-control"
          id="inputFirstName"
        />
      </div>
      <div class="col">
        <label for="inputEmail" class="form-label">Email</label>
        <input
          name="email"
          value="<%= messages.email %>"
          type="email"
          class="form-control"
          id="inputEmail"
        />
      </div>
      <div class="col">
        <label for="inputPassword" class="form-label">Password</label>
        <input
          name="password"
          type="password"
          class="form-control"
          id="inputPassword"
        />
      </div>
      <div
        class="from_btns mt-4 d-flex align-items-center justify-content-between"
      >
        <button type="submit" class="btn btn_orange sign_up_btn">
          Sign Up
        </button>
        <a href="/login" class="text-decoration-none">Alredy have account?</a>
      </div>
      <% if(messages.error) { %>
      <p class="mb-0 text-danger"><%= messages.error %></p>
      <% } %>
    </form>
  </div>
</section>
